<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">


    <RelativeLayout

        android:layout_width="100dp"
        android:layout_height="120dp"
        android:clipChildren="false"
        android:elevation="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cell_favorite_cocktailImage"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/ginfizz"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cell_favorite_cocktailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Gin Fizz"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/cell_favorite_cocktailImage"
            app:layout_constraintStart_toStartOf="@id/cell_favorite_cocktailImage"
            app:layout_constraintTop_toTopOf="@id/cell_favorite_cocktailImage" />

    </RelativeLayout>

</LinearLayout>




